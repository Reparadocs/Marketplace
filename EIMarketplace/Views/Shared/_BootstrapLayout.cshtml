<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>@ViewBag.Title - EI Marketplace</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    @Styles.Render("~/Content/dist/css/bootstrap.css")
    @Styles.Render("~/Content/jumbotron.css")
  </head>

  <body>
      <header>
    <div class="navbar navbar-inverse navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
            @Html.ActionLink("EI Marketplace", "Index", "Home", new{},  new { @class = "navbar-brand" })
        </div>

        <div class="navbar-collapse collapse">
          <ul class="nav navbar-nav">
             @RenderSection("Banner", required: false)

          </ul>
        </div><!--/.navbar-collapse -->

      </div>
    </div>
    </header>
      <div id="body">
            @RenderSection("featured", required: false)
            <section class="jumbotron">
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year</p>
                </div>
            </div>
        </footer>

    <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
      @Scripts.Render("~/Content/assets/js/jquery.js")
      @Scripts.Render("~/Content/dist/js/bootstrap.min.js")      
      @RenderSection("scripts", required: false)
  </body>
</html>
